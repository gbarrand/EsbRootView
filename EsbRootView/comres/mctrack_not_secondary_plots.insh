#!insh

gui_hide_console
gui_hide_camera_menu

scene_clear_dynamic
scene_clear_static
scene_clear_static_blend

plots_map_viewer

plots_set_grid 2 2

cut_second="(pdg==50000050)&&(is_secondary==false)"

#//////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////////
plots_set_current_plotter 0
MCTrack_plot -cut=${cut_second} -xfill=t

plotter_set_field title_box_width 0.5
plotter_set_field title_box_height 0.08

#//////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////////
plots_set_current_plotter 1
MCTrack_plot -cut=${cut_second} -xfill=p
plotter_set_field title_box_width 0.5
plotter_set_field title_box_height 0.08

#//////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////////
plots_set_current_plotter 2
MCTrack_plot -cut=${cut_second} -xfill=t -yfill=p
plotter_set_field title_box_width 0.5
plotter_set_field title_box_height 0.08

unset cut_second
